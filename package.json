{
    "name": "fluorite-flake",
    "version": "0.4.14",
    "description": "Boilerplate generator CLI for Fluorite â€” quickly scaffold Next.js, Expo, and Tauri projects and more.",
    "main": "dist/index.js",
    "type": "module",
    "bin": {
        "fluorite-flake": "./dist/cli.js"
    },
    "scripts": {
        "build": "tsc && node scripts/copy-templates.js",
        "prepublishOnly": "pnpm run build",
        "dev": "tsx src/cli.ts",
        "format": "biome format --write .",
        "lint": "biome lint .",
        "check": "biome check .",
        "test": "vitest run --project unit --project functional",
        "test:unit": "vitest run --project unit",
        "test:functional": "vitest run --project functional",
        "test:scenario": "vitest run --project scenario --max-concurrency=1",
        "test:all": "vitest run",
        "test:watch": "vitest watch",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui",
        "test:single": "vitest run",
        "test:e2e": "playwright test"
    },
    "keywords": ["cli", "utility", "ansi", "colors", "terminal"],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@playwright/test": "^1.55.1",
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^22.10.2",
        "@types/prompts": "^2.4.9",
        "@types/uuid": "^11.0.0",
        "@types/ws": "^8.18.1",
        "@vitest/ui": "^3.2.4",
        "playwright": "^1.55.1",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "@types/blessed": "^0.1.25",
        "blessed": "^0.1.81",
        "blessed-contrib": "^4.11.0",
        "chalk": "^5.3.0",
        "commander": "^12.1.0",
        "execa": "^9.6.0",
        "fs-extra": "^11.3.2",
        "ora": "^8.1.0",
        "prompts": "^2.4.2",
        "uuid": "^13.0.0",
        "ws": "^8.18.3"
    },
    "files": ["dist", "README.md", "LICENSE"],
    "engines": {
        "node": ">=20.0.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
