    "@types/blessed": "^0.1.25",
    "asciichart": "^1.5.25",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "chalk": "^5.3.0",
    "chalk-animation": "^2.0.3",
    "citty": "^0.1.6",
    "commander": "^12.1.0",
