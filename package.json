{
    "name": "fluorite-flake",
    "version": "0.4.2",
    "description": "Boilerplate generator CLI for Fluorite â€” quickly scaffold Next.js, Expo, and Tauri projects and more.",
    "main": "dist/index.js",
    "type": "module",
    "bin": {
        "fluorite-flake": "./dist/cli.js"
    },
    "scripts": {
        "build": "tsc && node scripts/copy-templates.js",
        "prepublishOnly": "pnpm run build",
        "dev": "tsx src/cli.ts",
        "format": "biome format --write .",
        "lint": "biome lint .",
        "check": "biome check .",
        "test": "vitest run",
        "e2e": "playwright test --project=nextjs-e2e --project=storybook-e2e",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "test:e2e": "playwright test --project=nextjs-e2e --project=storybook-e2e",
        "test:e2e:nextjs": "playwright test --project=nextjs-e2e",
        "test:e2e:storybook": "playwright test --project=storybook-e2e",
        "test:e2e:ci": "playwright test --project=nextjs-e2e --project=storybook-e2e --shard=1/2"
    },
    "keywords": ["cli", "utility", "ansi", "colors", "terminal"],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@playwright/test": "^1.55.1",
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^22.10.2",
        "@types/prompts": "^2.4.9",
        "@vitest/ui": "^3.2.4",
        "playwright": "^1.55.1",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "chalk": "^5.3.0",
        "commander": "^12.1.0",
        "execa": "^9.6.0",
        "fs-extra": "^11.3.2",
        "ora": "^8.1.0",
        "prompts": "^2.4.2"
    },
    "files": ["dist", "README.md", "LICENSE"],
    "engines": {
        "node": ">=20.0.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
