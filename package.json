{
  "name": "fluorite-flake",
  "version": "0.1.0",
  "description": "A beautiful CLI utility with ANSI colors",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "fluorite-flake": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check .",
    "prepare": "husky",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["cli", "utility", "ansi", "colors", "terminal"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.10.2",
    "husky": "^9.1.7",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "ora": "^8.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": ["dist", "README.md", "LICENSE"],
  "publishConfig": {
    "access": "public"
  }
}
