{
    "name": "fluorite-flake",
    "version": "0.5.10",
    "description": "Boilerplate generator CLI for Fluorite â€” quickly scaffold Next.js, Expo, and Tauri projects and more.",
    "main": "dist/index.js",
    "type": "module",
    "bin": {
        "fluorite-flake": "./dist/cli.js"
    },
    "scripts": {
        "build": "tsc && pnpm run copy:templates",
        "copy:templates": "node scripts/copy-templates.mjs",
        "dev": "cross-env NODE_ENV=development tsx src/cli.ts",
        "dev:all": "pnpm -r --parallel dev",
        "dev:web": "pnpm --filter web dev",
        "test": "vitest",
        "test:run": "vitest run",
        "test:memory-safe": "tsx scripts/test-memory-safe.ts",
        "test:coverage": "vitest run --coverage",
        "test:e2e": "vitest --config vitest.e2e.config.ts",
        "test:e2e:run": "vitest run --config vitest.e2e.config.ts",
        "test:unit": "vitest --config vitest.config.ts",
        "test:unit:run": "vitest run --config vitest.config.ts",
        "test:all": "pnpm test:unit:run && pnpm test:e2e:run",
        "format": "biome format --write src/",
        "lint": "biome lint src/",
        "check": "biome check src/"
    },
    "keywords": [
        "cli",
        "utility",
        "ansi",
        "colors",
        "terminal"
    ],
    "author": "Kazuhiro Kotsutsumi <kotsutsumi@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@biomejs/biome": "2.2.0",
        "@playwright/test": "^1.56.0",
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^22.18.8",
        "@types/prompts": "^2.4.9",
        "@types/react": "^19.2.2",
        "@types/ws": "^8.18.1",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "cross-env": "^10.1.0",
        "playwright": "^1.56.0",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3",
        "ultracite": "^5.6.1",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "@clack/prompts": "^0.11.0",
        "@inkjs/ui": "^2.0.0",
        "@libsql/client": "^0.15.15",
        "@types/blessed": "^0.1.25",
        "asciichart": "^1.5.25",
        "blessed": "^0.1.81",
        "blessed-contrib": "^4.11.0",
        "chalk": "^5.6.2",
        "chalk-animation": "^2.0.3",
        "citty": "^0.1.6",
        "commander": "^12.1.0",
        "enquirer": "^2.4.1",
        "execa": "^9.6.0",
        "fs-extra": "^11.3.2",
        "gradient-string": "^3.0.0",
        "ink": "^6.3.1",
        "ora": "^8.2.0",
        "prompts": "^2.4.2",
        "react": "^19.2.0",
        "react-devtools-core": "^6.1.5",
        "string-width": "^8.1.0",
        "uuid": "^13.0.0",
        "valtio": "^2.1.8",
        "ws": "^8.18.3"
    },
    "files": [
        "dist",
        "templates",
        "README.md",
        "LICENSE"
    ],
    "engines": {
        "node": ">=20.0.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
