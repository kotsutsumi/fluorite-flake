{
  "name": "fluorite-flake",
  "version": "0.1.0",
  "description": "A beautiful CLI utility with ANSI colors",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "fluorite-flake": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:all": "pnpm run build && vitest run --no-coverage",
    "prepare": "husky",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["cli", "utility", "ansi", "colors", "terminal"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.55.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.2",
    "@types/prompts": "^2.4.9",
    "@vitest/ui": "^3.2.4",
    "husky": "^9.1.7",
    "playwright": "^1.55.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.2",
    "handlebars": "^4.7.8",
    "ora": "^8.1.0",
    "prompts": "^2.4.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": ["dist", "README.md", "LICENSE"],
  "publishConfig": {
    "access": "public"
  }
}
