    "@types/react": "^19.2.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cross-env": "^10.1.0",
    "playwright": "^1.55.1",
    "tsx": "^4.19.2",
