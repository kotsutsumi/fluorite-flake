{
  "name": "fluorite-flake",
  "version": "0.3.25",
  "description": "Boilerplate generator CLI for Fluorite â€” quickly scaffold Next.js, Expo, and Tauri projects and more.",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "fluorite-flake": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run test/generator.test.ts",
    "test:e2e": "vitest run test/e2e-*.test.ts",
    "test:e2e:nextjs": "vitest run test/e2e-nextjs.test.ts",
    "test:e2e:comprehensive": "vitest run test/e2e-comprehensive.test.ts",
    "test:e2e:watch": "vitest watch test/e2e-*.test.ts",
    "test:e2e:ci": "pnpm run build && vitest run test/e2e-*.test.ts --reporter=verbose",
    "test:all": "pnpm run build && vitest run --no-coverage",
    "test:local": "./scripts/test-local.sh",
    "install:local": "./scripts/install-local.sh",
    "install:local:win": "powershell -ExecutionPolicy Bypass -File ./scripts/install-local.ps1",
    "clean": "rm -rf dist coverage playwright-report",
    "clean:deps": "rm -rf node_modules pnpm-lock.yaml",
    "prepare": "husky",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },
  "keywords": [
    "cli",
    "utility",
    "ansi",
    "colors",
    "terminal"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.55.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.2",
    "@types/prompts": "^2.4.9",
    "@vitest/ui": "^3.2.4",
    "husky": "^9.1.7",
    "playwright": "^1.55.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.2",
    "handlebars": "^4.7.8",
    "ora": "^8.1.0",
    "prompts": "^2.4.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
}
