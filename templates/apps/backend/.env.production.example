# -----------------------------------------------------------------------------
# バックエンド · Vercel 本番
# -----------------------------------------------------------------------------

# 実行環境
NODE_ENV=production
NEXT_PUBLIC_ENV=production
NEXT_PUBLIC_APP_URL=https://<production-domain>.vercel.app

# 認証
BETTER_AUTH_URL=https://<production-domain>.vercel.app
BETTER_AUTH_SECRET=
AUTH_REQUIRE_ADMIN_APPROVAL=true

# API エンドポイント
NEXT_PUBLIC_API_URL=https://<production-domain>.vercel.app

# データベース（Turso/libSQL）
DATABASE_PROVIDER=turso
DATABASE_URL=
PRISMA_DATABASE_URL=
TURSO_AUTH_TOKEN=
DIRECT_DATABASE_URL=
TURSO_DATABASE_URL=
TURSO_DATABASE_NAME=
TURSO_LAST_SYNCED_AT=

# ファイルストレージ（Vercel Blob - 本番環境必須）
# Vercelダッシュボードで作成したBlobストアのトークンを設定
# Production環境専用のBlobストアを使用することを推奨
BLOB_READ_WRITE_TOKEN=

