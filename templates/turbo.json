{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:push": {
      "dependsOn": ["^db:push"]
    },
    "db:seed": {
      "dependsOn": ["^db:seed"]
    },
    "db:reset": {
      "dependsOn": ["^db:reset"]
    },
    "test": {
      "cache": false
    },
    "test:unit": {
      "dependsOn": ["^test:unit"],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:ui": {
      "cache": false,
      "persistent": true
    },
    "test:e2e": {
      "dependsOn": ["^test:e2e"],
      "outputs": ["test-results/**", "playwright-report/**"]
    },
    "test:e2e:ui": {
      "cache": false,
      "persistent": true
    },
    "test:e2e:headed": {
      "cache": false
    },
    "test:e2e:debug": {
      "cache": false,
      "persistent": true
    },
    "test:all": {
      "dependsOn": ["test:unit", "test:e2e"]
    }
  }
}
