{
  "$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
  "extends": ["ultracite"],
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 4
  },
  "files": {
    "experimentalScannerIgnores": [
      ".vscode/**",
      "dist/**",
      "build/**",
      "coverage/**",
      "templates/**"
    ]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": "off"
      },
      "correctness": {
        "noUnusedVariables": "off"
      },
      "performance": {
        "noBarrelFile": "off",
        "useTopLevelRegex": "off"
      },
      "style": {
        "noMagicNumbers": "off"
      }
    }
  }
}
